    copyBtn.Size = UDim2.new(0, scale("X", 40), 0, scale("Y", 24))
    copyBtn.Position = UDim2.new(0.5, -scale("X", 20), 0, scale("Y", 5))
    copyBtn.BackgroundColor3 = Color3.fromRGB(100, 100, 150)
    copyBtn.Text = "Copy ID"
