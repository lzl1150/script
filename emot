        item.Favorite = not item.Favorite
        favBtn.Text = item.Favorite and "‚òÖ" or "‚òÜ"
        saveEmotesToData()
    end)
    
    removeBtn.MouseButton1Click:Connect(function()
        for i, saved in ipairs(savedEmotes) do
            if saved.Id == item.Id then
                table.remove(savedEmotes, i)
                saveEmotesToData()
                refreshSavedTab()
                break
            end
        end
