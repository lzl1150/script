local function createSavedCard(item)
    local card = Instance.new("Frame")
    card.Size = UDim2.new(0, scale("X", 120), 0, scale("Y", 200))
    card.BackgroundColor3 = Color3.fromRGB(55, 55, 55)
    createCorner(card, 8)
    
